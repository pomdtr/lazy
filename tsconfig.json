{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        // "moduleResolution": "node",
        "outDir": "lib",
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
