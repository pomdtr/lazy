{
  "name": "lzy",
  "version": "1.0.0",
  "description": "Easily Build Interactive CLI",
  "bin": {
    "lazy": "./lib/cli.js"
  },
  "scripts": {
    "build": "npm run compile && npm run generate-schema",
    "compile": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json",
    "generate-schema": "typescript-json-schema src/lazy.ts Lazy.Config --required --titles --strictNullChecks --noExtraProps --defaultNumberType integer --out lib/schema.json",
    "dev": "nodemon -e ts --exec \"npm run build\" --watch src"
  },
  "keywords": [],
  "author": "pomdtr",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^10.0.0",
    "glob": "^7.2.0",
    "jsonschema": "^1.4.0",
    "nunjucks": "^3.2.3",
    "yaml": "^1.10.2",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@types/nunjucks": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "typescript-json-schema": "^0.52.0"
  }
}
